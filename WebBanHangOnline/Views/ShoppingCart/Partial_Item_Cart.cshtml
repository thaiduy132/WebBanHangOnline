@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 main-cart-left">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 title-1">GIỎ HÀNG</div>

            <div class="allCart">
                <div class="product-cart">
                    @{
                        var TotalPrice = 0;

                    }
                    @if (Model != null && Model.Any())
                    {

                        foreach (var item in Model)
                        {
                            TotalPrice += item.TotalPrice;
                            <div class="product-info trow_@item.ProductId">
                                <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 item-2">
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="#">
                                                <img class="media-object" src="@item.ProductImg" width="250" height="250" alt="">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <a href="#">
                                                <h4 class="media-heading">@item.ProductName</h4>
                                            </a>

                                            <h5 class="price">
                                            </h5>
                                            <div class="row bottom">
                                                <div class="center" style="margin-left:-10px">
                                                    <div class="input-group" style="width:30%;display: inline-flex;">
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[@item.ProductId]" style="height: 30px;width: 30px;margin: 0;border: none;background-color: red;">
                                                                <span class="glyphicon glyphicon-minus"> - </span>
                                                            </button>
                                                        </span>
                                                        <input type="text" name="quant[@item.ProductId]" class="form-control input-number" value="@item.Quantity" min="1" max="100" style="text-align:center;height: 33px;width: 100px;margin-top: 3px;">
                                                        <span class="input-group-btn" style="
    /* width: 30px; */
    height: 3;
    margin: 0;
">
                                                            <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[@item.ProductId]" style="
    height: 20;
    width: 30px;
    height: 30px;
    background-color: greenyellow;
    border: none;
">
                                                                <span class="glyphicon glyphicon-plus"> + </span>
                                                            </button>
                                                        </span>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="media-right">
                                            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 item-2-1">
                                                <div class="price">
                                                    <h4>@item.Price.ToString("#,##0")</h4><span>VNĐ</span>
                                                </div>
                                                <div class="status">Còn hàng</div>
                                                <div class="button btnDelete" data-id="@item.ProductId">
                                                    <i class="fa-solid fa-trash"></i>
                                                </div>
                                                <div class="button btnUpdate">
                                                    <i class="fa-solid fa-trash"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p>Không có sản phẩm nào </p>
                    }


                </div>

            </div>

        </div>

    </div>
    @if (Model != null && Model.Any())
    {
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 main-cart-right">
            <ul class="bill">
                <li class="group_title">ĐƠN HÀNG</li>
                <li class="divider"></li>
                <li class="promotion">
                    <h4>NHẬP MÃ KHUYẾN MÃI</h4>
                    <input type="text">
                    <button>ÁP DỤNG</button>
                </li>
                <li class="group_item"></li>
                <li class="divider-dashed"></li>
                <li class="group_item total">
                    <span>Đơn hàng</span>
                    <span id="price">@TotalPrice.ToString("#,##0")</span><span>VNĐ</span>
                </li>
                <li class="group_item discount">
                    <span>Giảm giá</span>
                    <span id="price">0</span><span>VNĐ</span>
                </li>
                <li class="divider-dashed"></li>
                <li class="group_item total">
                    <span>TẠM TÍNH</span>
                    <span id="price">@TotalPrice.ToString("#,##0")</span><span>VNĐ</span>
                </li>
                <li class="group_item">
                    <input type="submit" value="TIẾP TỤC THANH TOÁN" class="submitBtn">
                </li>
            </ul>
        </div>

    }

</div>