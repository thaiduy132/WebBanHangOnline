@model IEnumerable<WebBanHangOnline.Models.ProductDetails>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"
      rel="stylesheet" />
<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">Hóa đơn >> <strong>Mã hóa đơn: # @Model.First().OrderCode</strong></p>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        <p class="pt-0">agletshop.com</p>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            <li class="text-muted">Người mua : <span style="color:#5d9fc5 ;">@Model.First().CustomerName</span></li>
                            <li class="text-muted">Địa chỉ : @Model.First().Address</li>
                            <li class="text-muted">Email : @Model.First().Email</li>
                            <li class="text-muted"><i class="fas fa-phone"></i> @Model.First().Phone</li>
                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Invoice</p>
                        <ul class="list-unstyled">
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Mã hóa đơn : </span># @Model.First().OrderCode
                            </li>
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Ngày tạo : </span>@Model.First().CreatedDate
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên sản phẩm</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                var thanhtien = item.ProductPrice * item.ProductOrderQuantity;
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductOrderQuantity</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@thanhtien.ToString("#,##0") VND</td>

                                </tr>
                                i++;
                            }
                        </tbody>

                    </table>
                </div>

                <hr>
                <div class="row">
                    <div class="">
                        <p class="text-black float-start">
                            <span class="text-black me-3" class ="float-right"> Tổng tiền  </span><span style="font-size: 25px;">@Model.First().TotalPrice.ToString("#,##0") VND</span>
                        </p>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>