@model IEnumerable<WebBanHangOnline.Models.EF.OrderDetail>
<div class="row">
    <div class="col-12">
        <h2>Danh sách sản phẩm</h2>
    </div>
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá </th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@i</td>
                        
                        <td>@item.Product.Title</td>
                        <td>@item.Price.ToString("#,##0") VNĐ</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("#,##0")) VNĐ</td>


                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>