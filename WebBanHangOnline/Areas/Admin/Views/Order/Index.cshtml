@model  PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách đơn hàng";
}

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>

}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body">

            <form asp-controller="Order" asp-action="GetOrder" method="POST">
                <select id="projectcat" name="status">
                    <option value="0">Tất cả</option>
                    <option value="1">Đặt thành công</option>
                    <option value="2">Đã chuyển giao hàng</option>
                    <option value="3">Đang vận chuyển</option>
                    <option value="4">Đã nhận hàng</option>
                    <option value="-1">Hủy</option>
                </select>
                <div class="input-group input-group-sm">
                    <input type="text" name="searchString" />
                    <span class="input-group-append">
                        <button type="submit" class="btn btn-info btn-flat btnSearch">Tìm kiếm</button>
                    </span>
                </div>
            </form>

            <table class="table table-bordered" id="table1">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Đơn giá</th>
                        <th>Thanh toán</th>
                        <th>Tình trạng đơn hàng</th>

                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@item.Code</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@item.TotalAmount.ToString("#,##0") VNĐ</td>
                                <td>@(item.TypePayment == 1 ? "Chờ thanh toán" : "Đã thanh toán")</td>
                                <td>
                                    @(item.Status == -1 ? "Hủy"
                                     :item.Status == 1 ? "Đặt thành công"
                                     :item.Status == 2 ? "Đã chuyển giao hàng"
                                     :item.Status == 3 ? "Đang vận chuyển"
                                     :item.Status == 4 ? "Đã nhận hàng" : "None" )
                                </td>

                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/order/view/@item.Id" class="btn btn-sm btn-success">Xem</a>
                                    <a href="#" class="btn btn-sm btn-danger btnCapNhat" data-id="@item.Id">Cập nhật</a>

                                </td>


                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-5"></div>
                <div class="col-6">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->




<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật thông tin đơn hàng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0"/>
                <div class="form-group">
                    <label>
                        Thông tin thanh toán
                    </label>
                    <select class="form-control" id="idTrangThai">
                        <option value="1">
                            Chờ thanh toán
                        </option>
                        <option value="2">
                            Đã thanh toán
                        </option>
                    </select>
                    <label>
                        Thông tin đơn hàng
                    </label>
                    <select class="form-control" id="idTrangThai2">
                        <option value="1">
                            Đặt thành công
                        </option>
                        <option value="2">
                            Đã chuyển giao hàng
                        </option>
                        <option value="3">
                            Đang vận chuyển
                        </option>
                        <option value="4">
                            Đã nhận hàng
                        </option>
                        <option value="-1">
                            Hủy
                        </option>

                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btnLuu">Lưu</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            })
            $('body').on('click', '.btnLuu', function () {
                var id = $('#txtOrderId').val();
                var paystatus = $('#idTrangThai').val();
                var orderstatus = $('#idTrangThai2').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, paystatus: paystatus, orderstatus: orderstatus },
                    success: function (rs) {
                        if (rs.success) {
                            location.reload();
                        }
                    }
                })

                $('#modal-default').modal('show');
            })
        })
    </script>    
    
}